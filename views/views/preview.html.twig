{% if lazy %}
    {% if twig_extension %}
        {% set filename = include(template_from_string("{{"~image_template~"}}")) %}
    {% endif %}
    <img class="lazy" src="{{ asset('bundles/filemanager/img/placeholder.gif') }}" data-src="{{ asset(filename) }}" height="{{ size }}">
{% else %}
    <img class="lazy" src="{{ asset('bundles/filemanager/img/placeholder.gif') }}" data-src="{{ asset(filename) }}"  height="{{ size }}">
{% endif %}
